{
  "name": "@meonode/ui",
  "description": "A structured approach to component composition, direct CSS-first prop styling, built-in theming, smart prop handling (including raw property pass-through), and dynamic children.",
  "version": "0.4.6",
  "type": "module",
  "main": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "require": "./dist/main.js",
      "types": "./dist/main.d.ts"
    },
    "./client": {
      "import": "./dist/client.js",
      "require": "./dist/client.js",
      "types": "./dist/client.d.ts"
    },
    "./nextjs-registry": {
      "import": "./dist/nextjs-registry/index.js",
      "require": "./dist/nextjs-registry/index.js",
      "types": "./dist/nextjs-registry/index.d.ts"
    }
  },
  "files": [
    "dist",
    "package.json",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "watch:build": "yarn dlx nodemon --watch src --ext ts,tsx,js,json --exec \"yarn build\"",
    "lint": "eslint --fix",
    "test": "NODE_OPTIONS='--expose-gc' node --stack-size=10000 --experimental-vm-modules node_modules/jest/bin/jest.js --ci --verbose",
    "prebuild": "yarn lint && yarn test",
    "build": "yarn prebuild && rm -rf ./dist && babel src --out-dir dist --extensions \".ts,.tsx,.js\" && tsgo -p tsconfig.build.json --diagnostics && tsc-alias -p tsconfig.build.json",
    "publish:pre": "./prepublish.sh && yarn build && yarn version -i prerelease && yarn npm publish --tag next",
    "publish:patch": "./prepublish.sh && yarn build && yarn version -i patch && yarn npm publish --tag latest",
    "publish:minor": "./prepublish.sh && yarn build && yarn version -i minor && yarn npm publish --tag latest",
    "publish:major": "./prepublish.sh && yarn build && yarn version -i major && yarn npm publish --tag latest",
    "prepare": "husky"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@emotion/cache": "^11.14.0",
    "@emotion/jest": "^11.14.2",
    "@eslint/js": "^9.39.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.2.4",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@typescript/native-preview": "^7.0.0-dev.20251113.1",
    "babel-plugin-module-resolver": "^5.0.2",
    "babel-preset-minify": "0.5.2",
    "eslint": "^9.39.1",
    "eslint-plugin-jsdoc": "^61.2.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-unused-imports": "^4.3.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "next": "^16.0.3",
    "prettier": "^3.6.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "ts-jest": "^29.4.5",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4"
  },
  "packageManager": "yarn@4.10.2",
  "peerDependencies": {
    "@emotion/cache": ">=11.14.0",
    "react": ">=19.2.0",
    "react-dom": ">=19.2.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/l7aromeo/meonode-ui.git"
  },
  "homepage": "https://ui.meonode.com",
  "bugs": {
    "url": "https://github.com/l7aromeo/meonode-ui/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "keywords": [
    "react",
    "typescript",
    "ui-framework",
    "theme-engine",
    "jsx-free",
    "type-safe",
    "component-composition",
    "css-in-js",
    "design-system",
    "react-components",
    "dynamic-theming",
    "frontend",
    "web-development",
    "no-jsx",
    "component-library",
    "accessible-components",
    "meonode-ui",
    "meonode"
  ]
}
