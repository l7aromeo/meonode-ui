{
  "presets": [
    ["@babel/preset-env", {
      "modules": false
    }],
    "@babel/preset-typescript",
    [
      "minify",
      {
        "keepFnName": true,
        "keepClassName": true
      }
    ]
  ],
  "plugins": [
    ["module-resolver", {
      "root": [
        "./src"
      ],
      "alias": {
        "@src": "./src"
      },
      "extensions": [".js", ".ts"]
    }]
  ],
  "generatorOpts": {
    "importAttributesKeyword": "with"
  },
  "exclude": ["**/node_modules/**"]
}
